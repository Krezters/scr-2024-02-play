<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="create Product table" author="rdanilov">
        <createTable tableName="Product">
            <column name="id" type="text">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>



    <changeSet id="create ProductItem table" author="rdanilov">
        <createTable tableName="ProductItem">
            <column name="id" type="text">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="price" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="inStock" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="productId" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="ProductItem"
                baseColumnNames="productId"
                constraintName="fk_ProductItem_productId"
                referencedTableName="Product"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>